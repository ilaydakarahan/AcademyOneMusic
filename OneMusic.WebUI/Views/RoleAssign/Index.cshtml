@model List<AppUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h3>Kullanıcılar</h3>

<table class="table table-bordered table-hover">

    <tr>
        <th>#</th>
        <th>Kullanıcı Adı</th>
        <th>Rol Ata</th>

    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name @item.Surname</td>
            <td>
                <a href="/RoleAssign/AssignRole/@item.Id" class="btn btn-outline-info">Rol Ata</a>
            </td>

        </tr>
    }


</table>